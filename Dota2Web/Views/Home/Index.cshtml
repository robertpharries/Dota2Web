<!DOCTYPE html>
<html ng-app="Dota2Web" ng-controller="LandingPageController" lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title ng-bind="models.title"></title>
    <link rel="stylesheet" type="text/css" href="http://ajax.googleapis.com/ajax/libs/angular_material/1.1.0/angular-material.min.css">
    <link rel='stylesheet' href='~/Content/loading-bar.min.css' type='text/css' media='all' />
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css">
</head>
<body ng-app="Dota2Web" ng-cloak>
    <div ng-controller="AppCtrl" layout="column" ng-cloak>
        <md-toolbar ng-controller="TitleController">
            <div class="md-toolbar-tools">
                <h3>
                    <span>{{models.title}}</span>
                </h3>
                <span flex></span>
                <md-button href="/#/search" class="md-raised" aria-label="Search">Search</md-button>
                <md-button href="/#/about" class="md-raised" aria-label="About">About</md-button>
                <form ng-controller="SearchController" ng-submit="search()">
                    <input type="text" ng-model="searchForm.accountId" id="accoundId" placeholder="User ID.." />

                    <md-button class="md-raised" aria-label="Get Matches" type="submit">Get Matches</md-button>
                </form>
            </div>
        </md-toolbar>

        <md-content>
            <div ng-view></div>
        </md-content>
    </div>

    

    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-route.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-animate.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-aria.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular-messages.min.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angular_material/1.1.0/angular-material.min.js"></script>
    <script src="~/Scripts/loading-bar.min.js"></script>
    @Scripts.Render("~/bundles/Dota2Web")
</body>
</html>